
# Database Configuration
# For serverless (Vercel), use a pooled connection for DATABASE_URL and a direct connection for DIRECT_URL.
# Example (Supabase):
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@aws-xyz.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require"
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.xyz.supabase.co:5432/postgres?sslmode=require"
DATABASE_URL="your_database_connection_string_here"
DIRECT_URL="your_direct_nonpooled_connection_string_here"

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here_generate_with_openssl_rand_base64_32"
NEXTAUTH_URL="http://localhost:3000"

# API Keys (Server-side only - never use NEXT_PUBLIC_ prefix for secrets)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# Email Service (e.g., SendGrid, Mailgun, etc.)
EMAIL_API_KEY="your_email_service_api_key_here"
EMAIL_FROM="noreply@anointarray.com"

# SMS Service (e.g., Twilio)
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+1234567890"

# Cloud Storage (e.g., AWS S3, Cloudinary)
AWS_ACCESS_KEY_ID="your_aws_access_key_here"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key_here"
AWS_BUCKET_NAME="your_s3_bucket_name_here"
AWS_REGION="us-east-1"

# Or Cloudinary for image management
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name_here"
CLOUDINARY_API_KEY="your_cloudinary_api_key_here"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret_here"

# Analytics (Google Analytics, etc.)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Third-party APIs
OPENAI_API_KEY="sk-your_openai_api_key_here"
ABACUSAI_API_KEY="your_abacusai_api_key_here"

# Supabase (optional â€” if you use Supabase client SDK anywhere)
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_do_not_expose_client_side"

# Development vs Production flags
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# Client-side variables (only use NEXT_PUBLIC_ for non-sensitive data)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
